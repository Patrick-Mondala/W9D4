<% url_name = (controller.controller_name == 'sessions' ? session_url(user) : users_url) %>
<% button_value = (controller.controller_name == 'sessions' ? "Log in" : "Sign up" ) %>
<form action="<%= url_name %>" method="POST">

<label>
    Username
    <input type="text" name="user[user_name]">
</label>

<label>
    Password
    <input type="password" name="user[password]">
</label>

<input type="submit" value="<%= button_value %>">

</form>